<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1E1F1F"
                android:centerColor="#1E1F1F"
                android:endColor="#1E1F1F33"
                android:centerX="0.7"
                android:centerY="0.9"
                android:angle="135" />

        </shape>
    </item>

    <!-- Dino Image -->
    <item
        android:left="80dp"
        android:top="0dp"
        android:right="80dp">

        <bitmap
            android:src="@drawable/splash"
            android:gravity="center" />

    </item>

</layer-list>
